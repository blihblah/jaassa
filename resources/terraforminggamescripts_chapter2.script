    SET 5 1
    JUMP IsAntennaFixed

SCRIPT IsAntennaFixed:
    WAITFORFIRE
    ISSTATE 2 0
    IFTRUE AntennaStillBroken
    ISSTATE 3 0
    IFTRUE AntennaStillBroken
    ISSTATE 4 0
    IFTRUE AntennaStillBroken
    ISSTATE 5 0
    IFTRUE AntennaStillBroken
    SET 6 1
    TEXT AntennaNowFixed
    WAITFORFIRE
    JUMP EndChapter2

